<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence 
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="trasporto-pubblico-pu">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        
        <!-- EntitÃ  JPA -->
        <class>it.epicode.entity.Tessera</class>
        <class>it.epicode.entity.Utente</class>
        <class>it.epicode.entity.Biglietto</class>
        <class>it.epicode.entity.Abbonamento</class>
        <class>it.epicode.entity.PuntoEmissione</class>
        <class>it.epicode.entity.DistributoreAutomatico</class>
        <class>it.epicode.entity.RivenditoreAutorizzato</class>
        <class>it.epicode.entity.Mezzo</class>
        <class>it.epicode.entity.Autobus</class>
        <class>it.epicode.entity.Tram</class>
        <class>it.epicode.entity.Tratta</class>
        <class>it.epicode.entity.Vidimazione</class>
        <class>it.epicode.entity.PeriodoServizio</class>
        <class>it.epicode.entity.PercorrenzaTratta</class>
        
        <properties>
            <!-- Configurazione database PostgreSQL -->
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/trasporto_pubblico"/>
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="password"/>
            
            <!-- Configurazione Hibernate -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.use_sql_comments" value="true"/>
            
            <!-- Pool di connessioni -->
            <property name="hibernate.connection.pool_size" value="10"/>
            
            <!-- Cache di secondo livello -->
            <property name="hibernate.cache.use_second_level_cache" value="false"/>
            <property name="hibernate.cache.use_query_cache" value="false"/>
        </properties>
    </persistence-unit>
</persistence>